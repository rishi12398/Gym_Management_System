
<h1>Listing Schedules</h1>

<% if current_user.id == 1 %>
  <%= link_to 'New Schedule', new_schedule_path %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <h1>
    <%= "Customer id #{current_user.id} "%>
  </h1>
  <% @schedules.each do |schedule| %>
    <tr>
      <td><%= schedule.title %></td>
      <td><%= schedule.text %></td>
      <td><%= link_to 'Show', schedule_path(schedule) %></td>
      <% if current_user.id == 1 %>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule_path(schedule),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>